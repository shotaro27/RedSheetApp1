@page
@model RedSheetApp1.Pages.Questions.DeleteModel

@{
    ViewData["Title"] = "削除";
}

<div>
    <h3>この問題を削除してもよろしいですか？</h3>
    <h4>@Html.DisplayFor(modelItem => modelItem.Question.Title)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            進行度
        </dt>
        <dd class="col-sm-10">
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: @($"{Math.Round(Model.QuestionSet.Progress * 100)}%");"
                     aria-valuenow="@(Math.Round(Model.QuestionSet.Progress * 100))" aria-valuemin="0" aria-valuemax="100">
                    @($"{Math.Round(Model.QuestionSet.Progress * 100)}%")
                </div>
            </div>
        </dd>
        <dt class="col-sm-2">
            作成日
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Question.CreateDate)
        </dd>
        <dt class="col-sm-2">
            更新日
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Question.UpdateDate)
        </dd>
        <dt class="col-sm-2">
            内容
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Question.Text)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Question.QuestionID" />
        <input type="submit" value="削除" class="btn btn-danger" /> |
        <a asp-page="Details" asp-route-id="@Model.Question.QuestionID">詳細に戻る</a>
    </form>
</div>
