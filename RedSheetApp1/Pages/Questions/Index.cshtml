@page
@model RedSheetApp1.Pages.Questions.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Question[0].QuestionID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question[0].CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question[0].UpdateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Question[0].Text)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Question) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QuestionID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                <div class="btn-group btn-group-sm" role="group">
                    <a asp-page="./Edit" asp-route-id="@item.QuestionID" class="btn btn-outline-success">Edit</a>
                    <a asp-page="./Details" asp-route-id="@item.QuestionID" class="btn btn-outline-primary">Details</a>
                    <a asp-page="./Delete" asp-route-id="@item.QuestionID" class="btn btn-outline-danger">Delete</a>
                    <a asp-page="./RedSheet" asp-route-id="@item.QuestionID" class="btn btn-danger">Red Sheet!</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Keywords[0].QuestionID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Keywords[0].CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Keywords[0].Word)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Keywords)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.QuestionID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Word)
                </td>
            </tr>
        }
    </tbody>
</table>