@page
@model RedSheetApp1.Pages.Questions.IndexModel

@{
    ViewData["Title"] = "問題一覧";
}

<h4>
    問題一覧　<a asp-page="Create" class="btn btn-outline-primary">新規作成</a>
</h4>
<table class="table table-striped w-100" style="table-layout: fixed">
    <thead class="w-100">
        <tr class="w-100">
            <th class="w-10">
                タイトル
            </th>
            <th class="w-10">
                進行度
            </th>
            <th class="w-50">
                内容
            </th>
            <th class="w-30"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.QuestionSets) {
        <tr>
            <td class="w-10">
                @Html.DisplayFor(modelItem => item.Question.Title)
            </td>
            <td class="w-10">
                <div class="progress">
                    <div class="progress-bar" role="progressbar" style="width: @($"{Math.Round(item.Progress * 100)}%");"
                         aria-valuenow="@(Math.Round(item.Progress * 100))" aria-valuemin="0" aria-valuemax="100">
                        @($"{Math.Round(item.Progress * 100)}%")
                    </div>
                </div>
            </td>
            <td class="w-50">
                <div class="question-content">
                    @Html.DisplayFor(modelItem => item.Question.Text)
                </div>
            </td>
            <td class="w-30">
                <div class="btn-group btn-group-sm" role="group">
                    <a asp-page="./Edit" asp-route-id="@item.Question.QuestionID" class="btn btn-outline-success">編集</a>
                    <a asp-page="./Details" asp-route-id="@item.Question.QuestionID" class="btn btn-outline-info">詳細</a>
                    <a asp-page="./Reset" asp-route-id="@item.Question.QuestionID" class="btn btn-outline-secondary">リセット</a>
                    <a asp-page="./Delete" asp-route-id="@item.Question.QuestionID" class="btn btn-outline-danger">削除</a>
                    <a asp-page="./RedSheet" asp-route-id="@item.Question.QuestionID" class="btn btn-danger">Red Sheet!</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>